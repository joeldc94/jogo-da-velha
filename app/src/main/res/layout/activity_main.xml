<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/posCenter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/posCenterStart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/posCenter"
        android:layout_marginEnd="54dp" />
    <ImageView
        android:id="@+id/posCenterEnd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/posCenter"
        android:layout_marginStart="54dp" />
    <ImageView
        android:id="@+id/posTopCenter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintBottom_toTopOf="@id/posCenter"
        android:layout_marginBottom="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/posTopStart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintBottom_toTopOf="@id/posCenterStart"
        android:layout_marginBottom="54dp"
        app:layout_constraintStart_toStartOf="@id/posCenterStart"
        android:layout_marginEnd="54dp"
        />
    <ImageView
        android:id="@+id/posTopEnd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintBottom_toTopOf="@id/posCenterEnd"
        android:layout_marginBottom="54dp"
        app:layout_constraintEnd_toEndOf="@id/posCenterEnd"
        android:layout_marginStart="54dp" />
    <ImageView
        android:id="@+id/posBottomCenter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/posCenter"
        android:layout_marginTop="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/posBottomStart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/posCenterStart"
        android:layout_marginTop="54dp"
        app:layout_constraintStart_toStartOf="@id/posCenterStart"
        android:layout_marginEnd="54dp"
        />
    <ImageView
        android:id="@+id/posBottomEnd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/posCenterEnd"
        android:layout_marginTop="54dp"
        app:layout_constraintEnd_toEndOf="@id/posCenterEnd"
        android:layout_marginStart="54dp" />
    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="54dp"

        />

</android.support.constraint.ConstraintLayout>